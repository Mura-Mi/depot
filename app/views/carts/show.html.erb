<% if notice %>
<p id="notice"><%= notice %></p>
<%end%>

<h2>
  Pragmatic Cart
</h2>

<table>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td><%= item.quantity %> &times;</td>
      <td><%= item.product.title %></td>
      <td class="price_line"><%= number_to_currency(item.total_price) %></td>
    </tr>
  <% end %>
    <tr class="total_line">
      <td colspan="2">Sum</td>
      <td class="total_cell"><%= number_to_currency(@cart.total_price)%></td>
    </tr>
</table>

<%= button_to 'Clear Cart', @cart, method: :delete, confirm:'Are you sure to clear cart?' %>


<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
